<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda'}) %>
<body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
    <!-- /Header -->
    
    <!-- Banner -->
    <div class="banner"></div>
    <!-- /Banner -->

    <!-- Mostrar resultados -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Resultados de la búsqueda: "<%= busqueda %>"</h2>
            </div>
            <% if (resultado.length > 0) { %>
                <% resultado.forEach(product => { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">
                            <a href="/products/detail/<%= product.id %>">
                                <figure class="product-box_image">
                                    <img src="/images/products/<%= product.image %>" alt="imagen de <%= product.name %>">
                                </figure>
                                <article class="product-box_data">
                                    <h2>$<%= product.discount > 0 ? toThousand(product.price - ((product.price * product.discount) / 100)) : product.price %>$</h2>
                                    <span><%= product.discount > 0 ? product.discount + "% OFF" : "" %></span>
                                    <p><%= product.name %></p>
                                    <i class="fas fa-truck"></i>
                                </article>
                            </a>
                        </section>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12">
                    <h2 class="products-title" style="color: tomato;">No hay productos que coincidan con "<%= busqueda %>"</h2>
                </div>
            <% } %>
        </div>
    </div>
    <!-- /Mostrar resultados -->

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
</body>
</html>