<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda'}) %>
<body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
    <!-- /Header -->
    
    <!-- Banner -->
    <div class="banner"></div>
    <!-- /Banner -->

    <!-- Mostrar resultados -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <% if (searchResultado.length > 0) { %>
                    <h2 class="products-title">Resultados de la búsqueda: "<%= searchBusquedaProducto  %>"</h2>
                    <div class="row">
                        <div class="col-12 col-sm-6 col-lg-3">
                            <section class="product-box">
                                <a href="/products/detail/<%= searchResultado[0].id %>">
                                    <figure class="product-box_image">
                                        <img src="/images/products/<%= searchResultado[0].image %>" alt="imagen de <%= searchResultado[0].name %>">
                                    </figure>
                                    <article class="product-box_data">
                                        <h2>$<%= toThousand(searchResultado[0].discount > 0 ? searchResultado[0].price - ((searchResultado[0].price * searchResultado[0].discount) / 100) : searchResultado[0].price) %>$</h2>
                                        <span><%= searchResultado[0].discount > 0 ? searchResultado[0].discount + "% OFF" : null %></span>
                                        <p><%= searchResultado[0].name %></p>
                                        <i class="fas fa-truck"></i>
                                    </article>
                                </a>
                            </section>
                        </div>
                    </div>
                <% } else { %>
                    <h2 class="products-title" style="color: tomato;">No hay productos que coincidan con "<%= searchBusquedaProducto %>"</h2>
                <% } %>
            </div>
        </div>
    </div>
    <!-- /Mostrar resultados -->

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
</body>
</html>
