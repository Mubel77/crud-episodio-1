<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'register' }) %>

  <body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
      <!-- /Header -->
      <div class="container products-wrapper">
        <div class="row">
          <div class="col-12">
            <h2 class="products-title">Crear usuario</h2>
          </div>
        </div>
        <div class="col-12">
          <form action="/users/register" method="POST">
            <div class="row product-detail">
              <div class="col-12 col-md-6">
                <label for="nombre" class="form-label">Nombre:</label>
                <input type="text" name="nombre" id="nombre" class="form-input" value="<%= locals.oldData ? oldData.nombre : null %>">
                <% if (locals.errors && errors.nombre) { %>
                  <p class="feedback">
                    <%= errors.nombre.msg %>
                  </p>
                  <% } %>
              </div>
              <div class="col-12 col-md-6">
                <label for="apellido" class="form-label">Apellido:</label>
                <input type="text" name="apellido" id="apellido" class="form-input" value="<%= locals.oldData ? oldData.apellido : null %>">
                <% if (locals.errors && errors.apellido) { %>
                  <p class="feedback">
                    <%= errors.apellido.msg %>
                  </p>
                  <% } %>
              </div>
              <div class="col-12 col-md-6">
                <label for="email" class="form-label">Email:</label>
                <input type="email" name="email" id="email" class="form-input"value="<%= locals.oldData ? oldData.email : null %>">
                <% if (locals.errors && errors.email) { %>
                  <p class="feedback">
                    <%= errors.email.msg %>
                  </p>
                  <% } %>
              </div>
              <div class="col-12 col-md-6">
                <label for="password" class="form-label">Contrase√±a:</label>
                <input type="password" name="password" id="password" class="form-input" value="<%= locals.oldData ? oldData.password : null %>">
                <% if (locals.errors && errors.password) { %>
                  <p class="feedback">
                    <%= errors.password.msg %>
                  </p>
                  <% } %>
              </div>
              <div class="col-12">
                <button type="submit" class="buy-now-button">Registrarse</button>
              </div>
            </div>
          </form>
        </div>
      </div>
        <!-- footer -->
        <%- include('partials/footer') %>
          <!-- /footer -->
  </body>

</html>